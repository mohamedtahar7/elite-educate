generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Course {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  instructor  String
  thumbnail   String
  video       String
  comments    Comment[]
}

model User {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  clerkId        String @unique
  email          String     @unique
  firstName           String
  lastName           String
  img            String
  subscribed     Boolean  @default(false)
  role           Role       @default(USER)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}
type Comment {
  username String
  imgUrl String
  comment  String
}

enum Role {
  USER
  ADMIN
  INSTRUCTOR
}
